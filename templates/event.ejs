<%
  // Format date in French
  function formatDateFr(dateStr) {
    const d = new Date(dateStr);
    const day = d.getDate();
    const months = ['janvier','f√©vrier','mars','avril','mai','juin','juillet','ao√ªt','septembre','octobre','novembre','d√©cembre'];
    return { day, month: months[d.getMonth()] };
  }
  const f = formatDateFr(event.startDate);
%>

<div class="event-card">
  <!-- Left coloured date column -->
  <div class="event-date-col">
    <span class="event-date-day"><%= f.day %></span>
    <span class="event-date-month"><%= f.month %></span>
  </div>

  <!-- Main information -->
  <div class="event-info">
    <h3 class="event-title"><%= event.title %></h3>

    <% if (event.startHour) { %>
      <div class="event-meta">
        <span class="event-icon">‚è∞</span>
        <span><%= event.startHour %><% if (event.endHour) { %> - <%= event.endHour %><% } %></span>
      </div>
    <% } %>

    <% if (event.address) { %>
      <div class="event-meta">
        <span class="event-icon">üìç</span>
        <span><%= event.address %></span>
      </div>
    <% } %>

    <% if (event.content) { %>
      <p class="event-content"><%= event.content %></p>
    <% } %>
  </div>
</div>