
<%
  /*  Images en habillage : articles pairs → image à gauche,
      articles impairs → image à droite                            */
  const floatClass = (typeof index !== 'undefined' && index % 2 === 1)
    ? 'text-wrap-right'
    : 'text-wrap-left';
%>

<div class="article">
  <h2 class="article-title"><%= article.title %></h2>

  <% if (article.img) { %>
    <img src="<%= article.img %>" alt="<%= article.alt %>" class="article-image <%= floatClass %>">
  <% } %>

  <div class="article-text">
    <%- article.content %>
  </div>

  <!-- Remet le flux normal après l’image flottante -->
  <div class="clear"></div>
</div>