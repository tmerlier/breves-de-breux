<article class="article">
  <!-- Article title -->
  <h2 class="article-title"><%= article.title %></h2>
  
  <!-- Formatted publication date -->
  <p class="article-date">
    Publi√© le <%= article.date.getDate().toString().padStart(2, '0') %>/<%= (article.date.getMonth() + 1).toString().padStart(2, '0') %>/<%= article.date.getFullYear() %>
  </p>
  
  <!-- Article content with alternating image alignment -->
  <div class="article-content <%= index % 2 === 0 ? 'article-content-left' : 'article-content-right' %>">
    <!-- Article image -->
    <img class="article-image" src="<%= article.img %>" alt="<%= article.alt || 'Image de l\'article' %>">
    
    <!-- Article text content -->
    <div class="article-text">
      <%- article.content %>
    </div>
  </div>
</article>